{
    "name": "game",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/game/src",
    "// targets": "to see all targets run: nx show project game --web",
    "targets": {
        "build": {
            "executor": "@nx/vite:build",
            "outputs": [
                "{options.outputPath}"
            ],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "dist/apps/game",
                "base": "/"
            },
            "configurations": {
                "development": {
                    "mode": "development"
                },
                "production": {
                    "mode": "production"
                }
            }
        },
        "serve": {
            "executor": "@nx/vite:dev-server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "game:build:development",
                "root": "apps/game"
            },
            "configurations": {
                "development": {
                    "buildTarget": "game:build:development",
                    "hmr": true
                },
                "production": {
                    "buildTarget": "game:build:production",
                    "hmr": false
                }
            }
        },
        "preview": {
            "executor": "@nx/vite:preview-server",
            "defaultConfiguration": "production",
            "options": {
                "buildTarget": "game:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "game:build:development"
                },
                "production": {
                    "buildTarget": "game:build:production"
                }
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": [
                "{projectRoot}/coverage"
            ],
            "options": {
                "passWithNoTests": true,
                "config": "vitest.config.ts"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": [
                "{options.outputFile}"
            ]
        },
        "tauri:dev": {
            "executor": "@nx/run-commands:run-commands",
            "options": {
                "command": "tauri dev",
                "cwd": "apps/game"
            }
        },
        "tauri:build": {
            "executor": "@nx/run-commands:run-commands",
            "options": {
                "command": "tauri build",
                "cwd": "apps/game"
            }
        }
    },
    "tags": []
}